# grow
#define _crt_secure_no_warnings 1

#include <stdio.h>

int main()

{
int a = 10;
int* p = % a;
*p = 20;
printf(“%p\n”,a)
// *p//-解引用操作符
} //指针变量用来存放地址

    printf("%p\n", &a);

return 0;
}
